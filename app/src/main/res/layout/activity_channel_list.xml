<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".channel_list">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/channel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:text="Channel 1"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/med1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meditation 1"
            android:textSize="20sp"
            android:layout_below="@id/channel1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60sp"
            android:layout_marginTop="75sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/med2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meditation 2"
            android:textSize="20sp"
            android:layout_below="@id/med1_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60sp"
            android:layout_marginTop="160sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/med3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meditation 3"
            android:textSize="20sp"
            android:layout_below="@id/med2_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60sp"
            android:layout_marginTop="150sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/med4_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meditation 4"
            android:textSize="20sp"
            android:layout_below="@id/med3_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60sp"
            android:layout_marginTop="150sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/med5_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meditation 5"
            android:textSize="20sp"
            android:layout_below="@id/med4_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60sp"
            android:layout_marginTop="150sp"
            android:textColor="#000"/>

        <GridLayout
            android:layout_below="@id/channel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="10sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20sp">

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardElevation="10sp"
                android:layout_marginTop="15sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp">


                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:id="@+id/med1_image"
                    android:src="@drawable/focus"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardElevation="10sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp">


                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/focus"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardElevation="10sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp">


                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/focus"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardElevation="10sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp">


                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/focus"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardElevation="10sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp">


                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/focus"/>

            </androidx.cardview.widget.CardView>


        </GridLayout>





    </RelativeLayout>





</ScrollView>