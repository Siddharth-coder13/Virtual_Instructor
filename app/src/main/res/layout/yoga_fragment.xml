<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/yoga_toolbar"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:background="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/logo1"
            android:layout_margin = "10sp"/>

        <TextView
            android:id="@+id/virtual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Virtual"
            android:textColor="#fff"
            android:layout_toEndOf="@id/logo"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/myriad_pro_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Instructor"
            android:textColor="#fff"
            android:layout_marginStart="7sp"
            android:layout_toEndOf="@id/logo"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/myriad_pro_regular"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/yoga_image"
            android:layout_width="wrap_content"
            android:layout_marginTop="55sp"
            android:layout_height="300dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="25dp">

        <ImageView
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="top|start"
            android:elevation="1dp"
            android:src="@drawable/ic_menu_black_24dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/yogagrp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/yoga_channel1_layout"
            android:layout_below="@id/yoga_image"
            android:layout_width="match_parent"
            android:paddingTop="5sp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/c1"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="20sp"
                android:background="@drawable/channel_background"
                />

            <TextView
                android:id="@+id/channel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel 1"
                android:textSize="25sp"
                android:fontFamily="@font/myriad_pro_regular"
                android:layout_marginStart="5sp"
                android:layout_marginBottom="15sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/c1"
                android:textColor="@color/colorPrimary"
                android:paddingStart="15sp"
                android:paddingTop="3sp"
                android:paddingEnd="35sp"/>

            <HorizontalScrollView
                android:id="@+id/yogaChannel1_card"
                android:layout_width="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_below="@id/channel1"
                android:layout_marginBottom="20sp"
                android:scrollbars="none"
                android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:rowCount="1">

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_gravity="fill"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="#fff"
                        android:id="@+id/asana1_yoga"
                        app:cardCornerRadius="20sp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="130sp"
                                android:layout_height="130sp"
                                android:src="@drawable/tadasana"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:id="@+id/tadasana"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tadasana"
                                android:layout_gravity="bottom"
                                android:fontFamily="@font/century_gothic"
                                android:textAlignment="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="#fff"
                        android:background="@color/colorPrimary"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:id="@+id/asana2_yoga"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130sp"
                                android:layout_height="130sp"
                                android:src = "@drawable/vrikshasana"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:id="@+id/vriksha"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Vrikshasana"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:fontFamily="@font/century_gothic"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="12dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:id="@+id/asana3_yoga"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="220sp"
                                android:layout_height="130sp"
                                android:src = "@drawable/adho_mukho_svanasana"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:id="@+id/adho"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Adho Mukho Svanasana"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:fontFamily="@font/century_gothic"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="12dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:id="@+id/asana4_yoga"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130sp"
                                android:layout_height="130sp"
                                android:src = "@drawable/balasana"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:id="@+id/bala"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Balasana"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:fontFamily="@font/century_gothic"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:id="@+id/asana5_yoga"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130sp"
                                android:layout_height="130sp"
                                android:src = "@drawable/bhujangasana"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:id="@+id/bhujanga"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Bhujangasana"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:fontFamily="@font/century_gothic"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:id="@+id/asana6_yoga"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130sp"
                                android:layout_height="130sp"
                                android:src = "@drawable/kursiasana"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:id="@+id/kursi"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Kursiasana"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:fontFamily="@font/century_gothic"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:id="@+id/asana7_yoga"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130sp"
                                android:layout_height="130sp"
                                android:src = "@drawable/naukasana"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:id="@+id/nauka"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Naukasana"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:fontFamily="@font/century_gothic"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:id="@+id/asana8_yoga"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="200sp"
                                android:layout_height="130sp"
                                android:src = "@drawable/paschimottanasana"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:id="@+id/paschim"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Paschimottanasana"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:fontFamily="@font/century_gothic"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:id="@+id/asana9_yoga"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130sp"
                                android:layout_height="130sp"
                                android:src = "@drawable/trikonasana"
                                android:scaleType="centerCrop"/>

                            <TextView
                                android:id="@+id/trikon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Trikonasana"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:fontFamily="@font/century_gothic"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>

            </HorizontalScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/yoga_channel2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/yoga_channel1_layout">

            <ImageView
                android:id="@+id/c2"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginStart="20sp"
                android:background="@drawable/channel_background"
                />

            <TextView
                android:id="@+id/channel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginBottom="15sp"
                android:paddingStart="15sp"
                android:fontFamily="@font/myriad_pro_regular"
                android:paddingEnd="35sp"
                android:layout_toEndOf="@id/c2"
                android:text="Coming Soon"
                android:paddingTop="3dp"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/yogaChannel2_card"
                android:layout_width="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_below="@id/channel2"
                android:layout_marginBottom="20sp"
                android:scrollbars="none"
                android:layout_height="wrap_content">

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:rowCount="1">

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_rowWeight="1"
                        app:cardBackgroundColor="#fff"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:id="@+id/yoga1"
                        app:cardCornerRadius="20sp">

                        <ImageView
                            android:id="@+id/padmasana_image"
                            android:layout_width="130sp"
                            android:layout_height="130sp"
                            android:src="@drawable/mindfullness"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tadasana"
                            android:layout_gravity="bottom"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:fontFamily="@font/century_gothic"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginTop="12dp"/>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:id="@+id/yoga2"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130sp"
                                android:layout_height="130sp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/mindfullness"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Vrikshasana"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:fontFamily="@font/century_gothic"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:cardBackgroundColor="#fff"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:id="@+id/yoga3"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="130sp"
                                android:layout_height="130sp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/mindfullness"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Kursiasana"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:fontFamily="@font/century_gothic"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_marginTop="12dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

            </HorizontalScrollView>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>