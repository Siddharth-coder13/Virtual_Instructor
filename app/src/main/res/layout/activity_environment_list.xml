<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".environment_list">

    <!--This xml displays the different type of environment available to us. This marks the final point of every activity in this app.-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/med_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/env_back"
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:src="@drawable/ic_arrow_back_black_24dp"/>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/heading"
            android:layout_below="@id/med_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#4F7282"
            android:text="Channel 1"
            android:textStyle="bold"
            android:fontFamily="@font/myriad_pro_regular"
            android:textSize="25sp"/>

        <GridLayout
            android:layout_below="@id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="10sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp">

            <androidx.cardview.widget.CardView
                android:id="@+id/Forest"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardElevation="10sp"
                android:layout_marginTop="15sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/med1_image"
                        app:cardCornerRadius="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hills"/>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/med1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forest"
                        android:textSize="15sp"
                        android:fontFamily="@font/century_gothic"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/med1_image"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:textAlignment="center"
                        android:textColor="#4F7282"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mountain"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardElevation="10sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:id="@+id/med2_image"
                        app:cardCornerRadius="12dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/mountain"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/med2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mountain"
                        android:textSize="15sp"
                        android:fontFamily="@font/century_gothic"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/med2_image"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:textAlignment="center"
                        android:textColor="#4F7282"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/space"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardElevation="10sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/med3_image"
                        app:cardCornerRadius="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/space"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/med3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Space"
                        android:textSize="15sp"
                        android:fontFamily="@font/century_gothic"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/med3_image"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:textAlignment="center"
                        android:textColor="#4F7282"/>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardElevation="10sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/med4_image"
                        app:cardCornerRadius="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/android"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/med4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Environment 4"
                        android:textSize="15sp"
                        android:fontFamily="@font/century_gothic"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/med4_image"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:textAlignment="center"
                        android:textColor="#4F7282"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardElevation="10sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/med5_image"
                        app:cardCornerRadius="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/android"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/med5_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Environment 5"
                        android:textSize="15sp"
                        android:fontFamily="@font/century_gothic"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/med5_image"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:textAlignment="center"
                        android:textColor="#4F7282"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:cardElevation="10sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/med6_image"
                        app:cardCornerRadius="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="100sp"
                            android:layout_height="100sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/android"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/med6_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Environment 6"
                        android:textSize="15sp"
                        android:fontFamily="@font/century_gothic"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/med6_image"
                        android:layout_marginStart="5sp"
                        android:layout_marginEnd="5sp"
                        android:textAlignment="center"
                        android:textColor="#4F7282"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </RelativeLayout>

</ScrollView>